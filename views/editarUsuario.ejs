<%- include('topo') %>

    <form method="post" action="/editar/<%= usuarioParaEditar.id %>">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="<%= usuarioParaEditar.nome %>" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= usuarioParaEditar.email %>" required>

        <label for="login">Login:</label>
        <input type="text" id="login" name="login" value="<%= usuarioParaEditar.login %>" required>

        <label for="senha">Senha:</label>
        <input type="password" id="senha" name="senha" placeholder="Deixe em branco para manter a senha atual">

        <button type="submit">Salvar</button>
        <%- include('rodape') %>